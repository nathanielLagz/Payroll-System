        <section class="container1-fluid ">
            <div class=" row ">
                <div class="logo2 col-4">
                    <img class="img-fluid" src="image/btn_icon_magic.png" alt="" class="image-fluid">
                </div>
                <div class="title2 col-8">
                    <h1>PayStation</h1>
                </div>
            </div>
        </section>




        <h2>Sign up</h2>
        <h4>Create your PayStation account</h4>
        <h4 class="error"><%= ERROR %></h4>
        <form action="/register" id="formRegister" method="POST">
            <div class="row">
                <div class="left col-6">
                    <div class="data">
                        <label for="firstname">Firstname</label>
                        <input type="text" placeholder="Firstname" id="firstname" name="firstname">
                    </div>
                    <div class="data">
                        <label for="email">Email</label>
                        <input type="text" placeholder="Email" id="email" name="Username">
                    </div>
                    <div class="data">
                        <label for="password">Password</label>
                        <input type="password" placeholder="Password" id="password" name="Password">
                    </div>
                </div>

                <div class="right col-6">
                    <div class="left">
                        <div class="data">
                            <label for="lastname">Lastname</label>
                            <input type="text" placeholder="lastname" id="lastname" name="lastname">
                        </div>
                        <div class="data">
                            <label for="phone">Phone No.</label>
                            <input type="text" placeholder="Phone no." id="phone" name="phone">
                        </div>
                        <div class="data">
                            <label for="confirmpassword">Confirm Password</label>
                            <input type="password" placeholder="Confirm Password" id="confirmpassword"
                                name="confirmpassword">
                        </div>
                    </div>
                </div>
            </div>


            <div class="containercheckbox">
                <!-- <label for="checkboxinput"></label> -->
                <input type="checkbox" id="agreedTerms">
                <span class="checkmark">I agree with the terms of use</span>
            </div>
            <!-- <div class="forgot-pass">
            <a href="#">Forgot Password?</a>
        </div> -->
            <div class="btn">
                <div class="inner"></div>
                <!-- <input type="button" value="Sign Up" onclick="location.href = '/';"> -->
                <!-- <input type="submit" value="Sign Up" onclick="location.href = '/register';"> -->
                <input type="button" value="Sign Up" onclick="checkRegister()">'
            </div>
            <script>
                function checkRegister() {
                    const firstname = document.getElementById('firstname').value;
                    const lastname = document.getElementById('lastname').value;
                    const email = document.getElementById('email').value;
                    const phoneNum = Number(document.getElementById('phone').value);
                    const password = document.getElementById('password').value;
                    const confirmpassword = document.getElementById('confirmpassword').value;
                    const agreed = document.getElementById('agreedTerms');
                    // || !Number.isInteger(phoneNum);
                    if ((!firstname || !lastname || !email || !phoneNum || !password || !confirmpassword) || !Number.isInteger(phoneNum))
                        alert('Please fill out all proper fields');
                    else if (confirmpassword != password)
                        alert('Password does not match.');
                    else if (!agreed.checked)
                        alert("Please check with terms of use");
                    else {
                        alert('Sign up successfully.');
                        document.getElementById('formRegister').submit();
                    }
                }
            </script>
            <div class="signup-link">
                Already have an Account.
                <a href="/">Sign in</a>
            </div>
        </form>
    </div>

</body>


