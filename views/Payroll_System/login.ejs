        <section class="container1-fluid ">
            <div class=" row ">
                <div class="logo1 col-4">
                    <img class="img-fluid" src="image/btn_icon_magic.png" alt="" class="image-fluid">
                </div>
                <div class="title1 col-8">
                    <h1>PayStation</h1>
                </div>
            </div>
        </section>

        <h2>Sign In</h2>
        <h4>Sign in to stay connected</h4>
        <h4 class="error"><%= ERROR %></h4>
        <form action="/signIn" method="POST" id="signing">
            <div class="data">
                <label for="email">Email</label>
                <input type="text" placeholder="Email" id="email" name="Username">
            </div>
            <div class="data">
                <label for="password">Password</label>
                <input type="password" placeholder="Password" id="password" name="Password">
            </div>
            <div class="containercheckbox">
                <!-- <label for="checkboxinput"></label> -->
                <input type="checkbox">
                <span class="checkmark">Remember me?</span>

                <a href="/forgetpass">Forgot Password?</a>
            </div>
            <!-- <div class="forgot-pass">
            <a href="#">Forgot Password?</a>
        </div> -->
            <div class="btn">
                <div class="inner"></div>
                <input type="submit" value="Sign In" onclick="location.href = '/signIn';">
                <!-- <input type="button" value="Sign In" onclick="checkFields()"> -->
            </div>
            <script>
                // testing
                function checkFields() {
                    const email = document.getElementById('email').value;
                    const password = document.getElementById('password').value;
                    if(!email || !password)
                        alert('Please fill out the fields');
                    else   
                        document.getElementById('signing').submit();
                }
            </script>
            <div class="signup-link">
                Don't have an account?
                <a href="/signup">Click here to sign up.</a>
            </div>
        </form>
    </div>
</body>

